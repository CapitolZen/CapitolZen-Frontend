{{#burger-menu animation="push" as |burger|}}
  {{#burger.menu itemTagName="li" as |menu|}}
    <a class="close" {{action burger.state.actions.close}}><i aria-hidden="true" class="fa fa-close"></i></a>

    <h2>
      Capitol Zen
    </h2>

    <ul>
      {{#menu.item}}
        {{#link-to "groups"}}Groups{{/link-to}}
      {{/menu.item}}

      {{#menu.item}}
        {{#link-to "bills.search"}}Bills{{/link-to}}
      {{/menu.item}}

      {{#menu.item}}
        {{#link-to "organization"}}My Account{{/link-to}}
      {{/menu.item}}

      {{#menu.item}}
        <a href="#" class="bm-menu-item" {{action "invalidateSession"}}>Logout</a>
      {{/menu.item}}
    </ul>
  {{/burger.menu}}

  {{#burger.outlet}}
    <a class="hamburger" {{action burger.state.actions.toggle}}><i aria-hidden="true" class="fa fa-bars"></i></a>

    <div class="app-container">
      {{ui/page-title}}
      <div class="content-container container-fluid">
        {{outlet}}
      </div>
      {{ui/app-footer}}

    </div>

  {{/burger.outlet}}
{{/burger-menu}}