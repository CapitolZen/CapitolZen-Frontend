<nav class="navbar navbar-light bg-light">
  <div class="container">
    <span class="navbar-brand mb-0 h1">
        {{ember-initials
          image=model.page.organization.avatar
          name=model.page.organization.name
          defaultName="?"
          seedText=group.title
          textColor="white"
          fontSize=45
          fontWeight=100
          fontFamily="Helvetica Neue Light, Arial, sans-serif"
          size=40
          class="img-thumbnail rounded-circle"
        }}
      {{model.page.organization.name}}
    </span>
    <span>
      {{#if isGuest}}
        <em>Welcome {{userName}}</em>
      {{/if}}
    </span>
    {{#if isGuest}}
      <img class="img-fluid d-inline" src="/assets/images/capitolzenwordmark_logo.svg" width="125" height="50"
           alt="Capitol Zen">
    {{else}}
      {{#bs-dropdown tagName="span" as |dd|}}
        {{#dd.toggle}}
          <img class="img-fluid d-inline" src="/assets/images/capitolzenwordmark_logo.svg" width="125" height="50"
               alt="Capitol Zen"> <span class="caret"></span>{{/dd.toggle}}
        {{#dd.menu as |menu|}}
          {{#menu.link-to "groups.detail.pages" model.page.group.id}}Post Update{{/menu.link-to}}
          {{menu.divider}}
          {{#menu.item}}
            {{#menu.link-to "app"}}Dashboard{{/menu.link-to}}
          {{/menu.item}}
          {{#menu.item}}
            {{#menu.link-to "groups.detail" model.page.group.id}}Edit {{model.page.group.name}}{{/menu.link-to}}
          {{/menu.item}}

        {{/dd.menu}}
      {{/bs-dropdown}}
    {{/if}}
  </div>
</nav>


<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <h1 class="display-3">{{model.page.title}}</h1>
    </div>
    <div class="col-md-6">
      <div class="media pull-right">
        {{user/user-avatar user=model.page.author class="mr-3" size=48 avatarRounded=true}}
        <div class="media-body">
          <h5 class="mt-0">By {{model.page.author.name}}</h5>
          <h6 class="mt-0" class="text-muted font-weight-light">
            {{if model.page.author.jobTitle model.page.author.jobTitle}} {{model.group.organization.name}}
          </h6>
        </div>
      </div>
    </div>
  </div>

  <hr>
</div>

{{#if model.description}}
  <div class="container">
    <p class="lead">
      {{model.description}}
    </p>
  </div>
{{/if}}

<div class="container">
  {{#pages/-anon/display page=model}}
    {{outlet}}
  {{/pages/-anon/display}}
</div>