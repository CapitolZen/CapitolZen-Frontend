{{ui-page-property "Team" property="title"}}

<div class="row">
  <div class="col-xl-8 offset-xl-2">
    {{invite/invite-create organization=model.organization invites=model.invites}}
  </div>
</div>

<div class="row">
  <div class="col-xl-8 offset-xl-2">
    {{#bs-tab as |tab|}}
      {{#tab.pane title="Users"}}
        {{#if model.users}}
          {{#ui/ui-card}}
            {{#block-slot 'content'}}
              {{log model.users}}
              <div class="list-group">
                {{#each model.users as |user|}}
                  {{user/user-summary user=user}}
                {{/each}}
              </div>
            {{/block-slot}}
          {{/ui/ui-card}}
        {{else}}
          <h3 class="no-things">Organization has no users.</h3>
        {{/if}}
      {{/tab.pane}}
      {{#tab.pane title="Unclaimed Invites"}}
        {{#ui/ui-card}}
          {{#block-slot 'content'}}
            {{#if model.invites}}
              {{#each model.invites as |invite index|}}
                {{invite/invite-summary invite=invite updateInvite='updateUserInvite'}}
              {{/each}}
            {{else}}
              <p class="no-things">Organization has no unclaimed invites.</p>
            {{/if}}
          {{/block-slot}}
        {{/ui/ui-card}}

      {{/tab.pane}}
    {{/bs-tab}}
  </div>
</div>
