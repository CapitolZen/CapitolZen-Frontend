<div class="app flex-row align-items-center">
  <div class="container">
    <div class="col-md-6 offset-md-3">
      <div class="anon-header">
        <h1 class="d-flex">
          <img  class="img-fluid w-50" src="/assets/images/capitolzenwordmark_logo.svg" alt="Capitol Zen">
          <span class="sr-only">Capitol Zen</span>
        </h1>
      </div>
      {{#each flashMessages.queue as |flash|}}
        {{flash-message flash=flash}}
      {{/each}}
      <div class="card">
        {{#bs-form model=changeset onSubmit=(action "resetPassword") as |form|}}
          <div class="card-block">
            <h4 class="card-title">Create New Password</h4>
            {{form.element controlType="password" label="New Password" property="password" required=true}}
            {{form.element controlType="password" label="Confirm New Password" property="confirm_password" required=true}}
          </div>
          <div class="card-footer">
            {{bs-button textState=buttonState disabled=formSubmitButtonDisabled defaultText="Confirm" type="primary" buttonType="submit"}}
            {{#link-to 'anon.login' class="pull-right btn btn-secondary"}}Cancel{{/link-to}}
          </div>
        {{/bs-form}}
      </div>
    </div>
  </div>
</div>
