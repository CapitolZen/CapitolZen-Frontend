{{ui-page-property "Updates for" model.group.title property="title"}}

<div class="row">
  <div class="col-md-8">
    {{updates/update-list page=model}}
  </div>
  <div class="col-md-4">
    {{#ui/ui-box as |b|}}
      {{#b.header class=(if model.published "bg-info" "bg-warning")}}
        {{model.title}}
      {{/b.header}}
      {{#b.body}}
        <dl>
          <dt>Status</dt>
          <dd>{{if model.published "Published" "Draft"}}</dd>
          <dt>Created</dt>
          <dd>{{tools/date-display model.created}}</dd>
          {{#if model.description}}
            <dt>Description</dt>
            <dd>{{model.description}}</dd>
          {{/if}}
        </dl>
      {{/b.body}}
      {{#b.footer}}
        <strong>
          {{#link-to "groups.detail.pages.edit" model.group.id model.id}}Edit{{/link-to}}
        </strong>
      {{/b.footer}}
    {{/ui/ui-box}}
  </div>
</div>