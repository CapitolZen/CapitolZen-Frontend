{{ui-page-property model.title property="title"}}

<div class="row justify-content-between">
  <div class="col-md-6">
  {{#ui/ui-card}}
    {{#block-slot "title"}}
        Edit Client
    {{/block-slot}}
    {{#block-slot "content"}}
      {{groups/group-form model=model}}
    {{/block-slot}}
  {{/ui/ui-card}}
  </div>
  <div class="col-md-5">
    <h4>Quick Links</h4>
    <div class="list-group">
      {{#link-to "groups.group.bills" model.id class="list-group-item list-group-item-action"}}
        <span>{{fa-icon "file-text"}} Saved Bills</span>
      {{/link-to}}
      {{#link-to "reports.client" model.id class="list-group-item list-group-item-action"}}
        <span>{{fa-icon "tachometer"}} Reports</span>
      {{/link-to}}
    </div>
  </div>
</div>

