      {{navbar.toggle class="navbar-toggler-right"}}
      {{#link-to "index" class="navbar-brand"}}<strong>Capitol Zen</strong>{{/link-to}}
    </div>
    {{#navbar.content}}
      {{#navbar.nav as |nav|}}
        {{#if isAuthenticated}}

          {{#nav.item}}{{#nav.link-to "bills.search"}}Search{{/nav.link-to}}{{/nav.item}}
          {{#nav.item}}{{#nav.link-to "groups"}}Groups{{/nav.link-to}}{{/nav.item}}
