        {{else}}

          {{#nav.item}}{{#nav.link-to "login"}}Login{{/nav.link-to}}{{/nav.item}}

          {{#nav.item}}{{#nav.link-to "login"}}Register{{/nav.link-to}}{{/nav.item}}

