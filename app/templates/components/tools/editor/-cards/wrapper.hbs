{{#if editCard}}
  {{#bs-button type="link" onClick=(action editCard) class="float-right"}}{{fa-icon "pencil"}}{{/bs-button}}
{{/if}}
{{#if setupData.isLoading}}
  {{ui/inline-loading}}
{{else}}
  <div class="bg-lighter rounded p-3">
    <div class="row">
      <div class="col-4">
        <dl>
          <dt>
            {{#link-to "page.wrapper" page.id wrapper.id}}{{wrapper.bill.stateId}}{{/link-to}}
          </dt>
          <dd>{{wrappers/wrapper-position wrapper=wrapper}}</dd>
          <dt>Last Updated</dt>
          <dd>{{moment-format wrapper.bill.lastActionDate "M/D/YYYY"}}</dd>
          <dt>Status</dt>
          <dd class="text-capitalize">{{wrapper.bill.computedStatus.action}}</dd>
          <dd>{{#link-to "page.wrapper" page.id wrapper.id class="font-weight-bold text-secondary"}}View{{/link-to}}</dd>
        </dl>
      </div>
      <div class="col-4">
        <dl>
          <dt>Summary</dt>
          <dd class="small">{{wrapper.displaySummary}}</dd>
        </dl>
      </div>
      <div class="col-4">
        <dl>
          {{#if wrapper.bill.sponsor.fullName}}
            <dt>Sponsor</dt>
            <dd>{{wrapper.bill.sponsor.fullName}}</dd>
          {{/if}}
          {{#if wrapper.bill.currentCommittee}}
            <dt>Current Committee</dt>
            <dd>{{wrapper.bill.currentCommittee.displayName}}</dd>
          {{/if}}
        </dl>
      </div>
    </div>
  </div>
{{/if}}