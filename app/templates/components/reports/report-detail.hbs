<div class="row">
  <div class="col-md-8">
    {{#ui/ui-box as |b|}}
      {{#b.header}}
        {{model.title}}
      {{/b.header}}
      {{#b.body}}
        <h6>Description</h6>
        <p>{{model.description}}</p>
        <h6>Layout</h6>
        {{model.layout.label}}
      {{/b.body}}

    {{/ui/ui-box}}

    {{#ui/ui-box as |b|}}
      {{#b.body}}
        {{reports/report-wrappers-table report=model}}
      {{/b.body}}
    {{/ui/ui-box}}
  </div>
  <div class="col-md-4">
    <h4>Quick Links</h4>
    <div class="list-group">
      {{#link-to "reports.edit" model.id class="list-group-item list-group-item-action"}}
        <span>{{fa-icon "pencil"}} Edit</span>{{/link-to}}
      {{#reports/report-send report=model class="list-group-item list-group-item-action"}}
        <span>{{fa-icon "envelope"}} Email</span> {{/reports/report-send}}
      {{#reports/report-download report=model class="list-group-item list-group-item-action"}}
        <span>{{fa-icon "cloud-download"}} Download</span>{{/reports/report-download}}
      {{#bs-button
        onClick=(action (mut modal) true)
        class="list-group-item list-group-item-action list-group-item-danger"}}
        <span>{{fa-icon "trash"}} Delete</span>
      {{/bs-button}}
    </div>
  </div>
</div>

{{#bs-modal-simple
  open=modal
  title=title
  closeTitle="Cancel"
  submitTitle="DELETE"
  closeButton=true
  onSubmit=(action "submit")
  onHidden=(action (mut modal) false)
  renderInPlace=true}}
{{/bs-modal-simple}}

{{#bs-modal open=modal onSubmit=(action "submit") onHidden=(action (mut modal) false) as |modal|}}
  {{#modal.header}}
    <h4 class="modal-title">
      Are you sure?
    </h4>
  {{/modal.header}}
  {{#modal.body}}
    <p><em> Deleting this report will delete this report and all documents associated with it.</em></p>
  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button onClick=(action modal.close)}}Cancel{{/bs-button}}
    {{#bs-button type="danger" onClick=(action modal.submit)}}{{fa-icon "trash"}} <strong>DELETE</strong>{{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}