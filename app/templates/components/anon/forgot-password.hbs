{{#if media.isMobile}}
  {{#bs-form model=changeset onSubmit=(action "submit") as |form|}}
    <h4 class="card-title">Reset Password</h4>
    {{form.element controlType="email" label="Email" placeholder="Email" property="email"}}
    {{bs-button block=true textState=buttonState disabled=formSubmitButtonDisabled defaultText="Request Password Reset"
                type="primary" buttonType="submit"}}
    <div class="login-help">
      {{#link-to 'anon.login' class=""}}Cancel{{/link-to}}
    </div>
  {{/bs-form}}
{{else}}
  <div class="card">
    {{#bs-form model=changeset onSubmit=(action "submit") as |form|}}
      <div class="card-body">
        <h4 class="card-title">Reset Password</h4>
        {{form.element controlType="email" label="Email" placeholder="Email" property="email"}}
      </div>
      <div class="card-footer">
        {{bs-button textState=buttonState disabled=formSubmitButtonDisabled defaultText="Request Password Reset"
                    type="primary" buttonType="submit"}}
        {{#link-to 'anon.login' class="pull-right btn btn-secondary"}}Cancel{{/link-to}}
      </div>
    {{/bs-form}}
  </div>
{{/if}}
