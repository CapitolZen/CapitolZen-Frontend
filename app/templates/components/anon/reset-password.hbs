{{#if media.isMobile}}
  {{#bs-form model=changeset onSubmit=(action "submit") as |form|}}
    <h4 class="card-title">Create New Password</h4>
    {{form.element controlType="password" label="New Password" property="password" required=true}}
    {{form.element controlType="password" label="Confirm New Password" property="confirm_password" required=true}}
    {{form/changeset-form-submit block=true submit=submit loadingOnComplete=true defaultIcon="sign-in" defaultText="Confirm"}}
    <div class="login-help">
      {{#link-to 'anon.login'}}Cancel{{/link-to}}
    </div>
  {{/bs-form}}
{{else}}
  <div class="card">
    {{#bs-form model=changeset onSubmit=(action "submit") as |form|}}
      <div class="card-body">
        <h4 class="card-title">Create New Password</h4>
        {{form.element controlType="password" label="New Password" property="password" required=true}}
        {{form.element controlType="password" label="Confirm New Password" property="confirm_password" required=true}}
      </div>
      <div class="card-footer">
        {{form/changeset-form-submit submit=submit loadingOnComplete=true defaultIcon="sign-in" defaultText="Confirm"}}
        {{#link-to 'anon.login' class="pull-right btn btn-secondary"}}Cancel{{/link-to}}
      </div>
    {{/bs-form}}
  </div>
{{/if}}
