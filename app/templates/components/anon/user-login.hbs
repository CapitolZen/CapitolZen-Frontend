{{#if media.isMobile}}
  {{#bs-form model=changeset onSubmit=(action "submit") as |form|}}
    {{form.element controlType="email" label="Email" placeholder="Email" property="identification"}}
    {{form.element controlType="password" label="Password" placeholder="Password" property="password"}}
    {{form/changeset-form-submit block=true submit=submit loadingOnComplete=true defaultIcon="sign-in" defaultText="Login"}}
  {{/bs-form}}
  <div class="login-help">
    {{#link-to 'anon.forgot-password'}}Need Help?{{/link-to}}
  </div>
  <div class="login-new-account">
    {{#link-to 'anon.register' class=""}}Create New Account{{/link-to}}
  </div>
{{else}}
  <div class="card">
    {{#bs-form model=changeset onSubmit=(action "submit") as |form|}}
      <div class="card-body">
        <h4 class="card-title">Welcome Back</h4>
        {{form.element controlType="email" label="Email" placeholder="Email" property="identification"}}
        {{form.element controlType="password" label="Password" placeholder="Password" property="password"}}
        {{#link-to 'anon.forgot-password' class=""}}Need Help?{{/link-to}}
      </div>
      <div class="card-footer">
        {{form/changeset-form-submit submit=submit loadingOnComplete=true defaultIcon="sign-in" defaultText="Login"}}
        {{#link-to 'anon.register' class="pull-right btn btn-secondary"}}Create New Account{{/link-to}}
      </div>
    {{/bs-form}}
  </div>
{{/if}}
