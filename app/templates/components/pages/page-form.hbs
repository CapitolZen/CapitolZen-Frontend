{{#bs-form model=changeset onSubmit=(action "submit") as |form|}}
  {{#ui/ui-box as |b|}}
    {{#b.body}}
      {{form.element controlType="text" label="Page Title" property="title"}}
      {{form.element controlType="textarea" label="Page Description" property="description"}}
      {{#form.element controlType="power-select" label="Page Author" property="author"
                      options=assignedToOptions as |el|}}
        {{#el.control searchEnabled=false as |item|}}
          {{user/user-select-label user=item}}
        {{/el.control}}
      {{/form.element}}
      {{#form.element controlType="power-select" label="Visibility" property="visibility" options=visibilityOptions as |el|}}
        {{#el.control searchEnabled=false as |item|}}
          {{#if (eq item "organization")}}
            Just people in my organization
          {{/if}}
          {{#if (eq item "anyone")}}
            Anyone with the link
          {{/if}}
        {{/el.control}}
      {{/form.element}}
      {{form.element controlType="x-toggle" property="published" label="Published" options=(hash showLabels=false theme="light")}}
    {{/b.body}}
    {{#b.footer}}
      {{bs-button defaultText="Save" disabled=disableSubmit type="primary" pendingText="Saving..." buttonType="submit"}}
    {{/b.footer}}
  {{/ui/ui-box}}
{{/bs-form}}
