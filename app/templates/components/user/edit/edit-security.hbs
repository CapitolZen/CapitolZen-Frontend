{{#bs-form model=changeset onSubmit=(action "submit") as |form|}}
  {{#ui/ui-card}}
    {{#block-slot 'content'}}
      {{form.element controlType="password" label="Current Password" property="currentPassword" required=true}}
      {{form.element controlType="password" label="New Password" property="password" required=true}}
      {{form.element controlType="password" label="Confirm New Password" property="confirmPassword" required=true}}
    {{/block-slot}}
    {{#block-slot 'footer'}}
      {{bs-button defaultText="Change Password" pendingText="Saving..." type="primary" buttonType="submit"}}
    {{/block-slot}}
  {{/ui/ui-card}}
{{/bs-form}}