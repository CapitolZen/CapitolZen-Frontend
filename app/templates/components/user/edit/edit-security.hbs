{{#bs-form model=changeset onSubmit=(action "submit") as |form|}}
  {{#ui/ui-box as |b|}}
    {{#b.body}}
      {{form.element controlType="password" label="Current Password" property="current_password" required=true}}
      {{form.element controlType="password" label="New Password" property="password" required=true}}
      {{form.element controlType="password" label="Confirm New Password" property="confirm_password" required=true}}
    {{/b.body}}
    {{#b.footer}}
      {{bs-button defaultText="Change Password" pendingText="Saving..." type="primary" buttonType="submit"}}
    {{/b.footer}}
  {{/ui/ui-box}}
{{/bs-form}}