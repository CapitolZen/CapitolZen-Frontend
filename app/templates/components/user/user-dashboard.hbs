{{#if showIntro}}
  <div class="jumbotron">
    {{tools/close-button class="pullRight" close=(action "dismissIntro")}}
    <h1 class="display-3">Hello!</h1>
    <p class="lead">Welcome to Capitol Zen. Thanks for trying out our private beta.</p>
    <hr class="my-4">
    <p>We hope this will be a useful service for you. Get started by adding clients, searching bills, or inviting teammates.</p>
    <p class="lead">
      {{#link-to "groups.add" class="btn btn-primary btn-lg"}}Add A Client{{/link-to}}
      {{#link-to "bills.search" class="btn btn-secondary btn-lg"}}Search Bills Now{{/link-to}}
    </p>
  </div>
{{/if}}
<p class="lead"><em>Welcome Back {{userName}}</em></p>
<div class="row">
  <div class="col-md-6">
    {{#if alerts}}
      <h3>Alerts</h3>
    {{else}}
      <p class="small text-center"><em>No Alerts!</em></p>
      <h3>Search</h3>
      {{bills/bill-search}}
    {{/if}}
  </div>
  <div class="col-md-6">
    <h3>My Groups</h3>

  </div>
</div>