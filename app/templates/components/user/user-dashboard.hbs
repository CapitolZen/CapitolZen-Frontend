
<div class="row">

  <div class="col-md-4 order-md-2">
    <h4>Quick Links</h4>
    <div class="list-group">
      {{#link-to "bills.saved" class="list-group-item list-group-item-action"}}{{fa-icon "file-text" class="mr-2"}}Saved Bills{{/link-to}}
      {{#link-to "reports.index" class="list-group-item list-group-item-action"}}{{fa-icon "map" class="mr-2"}}Reports{{/link-to}}
      {{#link-to "bills.search" class="list-group-item list-group-item-action"}}{{fa-icon "search" class="mr-2"}}Search Bills{{/link-to}}
      {{#link-to "organization.team" class="list-group-item list-group-item-action"}}{{fa-icon "users" class="mr-2"}}My Team{{/link-to}}
    </div>
    <hr class="my-2">
    <h4>My Clients</h4>
    <div class="list-group">
      {{#each queriedGroup as |group|}}
        <div class="list-group-item d-flex justify-content-between">
          {{#link-to "groups.detail" group.id}}{{group.title}}{{/link-to}}
          <div class="btn-group btn-group-sm">
            {{#link-to "groups.detail.bills" group.id class="btn btn-outline-secondary"}}{{fa-icon "file-text"}}{{/link-to}}
            {{#link-to "groups.detail.index" group.id class="btn btn-outline-secondary"}}{{fa-icon "pencil-square-o"}}{{/link-to}}
            {{#link-to "reports.client" group.id class="btn btn-outline-secondary"}}{{fa-icon "map"}}{{/link-to}}
          </div>
        </div>
      {{else}}
        {{#link-to "groups.index" class="list-group-item list-group-item-action"}}
            No Saved Clients - View All
        {{/link-to}}

      {{/each}}
    </div>
  </div>
  <div class="col-md-8 order-md-1">
    {{#unless fetchActions.isRunning}}
    <h4 class="text-center">What's New</h4>
      {{#each actionList as |action|}}
        <div>

        {{actions/action-view model=action}}
        </div>
      {{else}}
        {{#ui/ui-box class="w-100" as |b|}}
          {{#b.header class="text-white bg-success"}}
            All Caught Up!
          {{/b.header}}
          {{#b.body}}
            <h4 class="card-title">No New Actions</h4>
            <p class="card-text">Nothing to review here. We'll email you when there's something new to report.</p>
          {{/b.body}}
        {{/ui/ui-box}}
      {{/each}}
    {{else}}<h4 class="text-center"><em>Loading latest...</em></h4>
      {{ui/loading-animation}}
    {{/unless}}

  </div>
</div>
