{{ui-page-property "Search Bills" property="title"}}

<div class="row">
  <div class="col-lg-8 offset-lg-2 bill-search-page">
    {{#bills/bill-search as |s|}}
      {{s.input}}
      {{#if s.searching}}
        {{ui/loading-animation}}
      {{else}}
        {{s.resultList class="mt-3"}}
      {{/if}}
    {{/bills/bill-search}}
  </div>
</div>
