{{bills/bill-header bill=model.bill}}
{{#ui/ui-card}}
  {{#block-slot "content"}}
    <div class="col-md-3">
      <h5>Summary</h5>
      <p>{{model.bill.title}}</p>
      {{#if model.wrappers}}
        <h5>Saved For</h5>
        {{#each model.wrappers as |wrapper|}}
          <p>{{#link-to "groups.bill.detail" wrapper.id}} {{wrapper.group.title}} {{wrapper.position}} {{/link-to}}</p>
        {{/each}}
      {{/if}}
      <h5>History</h5>
      <div class="item-list">
        {{#each model.bill.history as |history|}}

        {{/each}}
      </div>
    </div>
    <div class="col-md-3">
      <h5>Documents</h5>
      <div class="item-list">
      {{#each model.bill.documents as |doc|}}

          <div class="list-item">
            {{doc.url}}
          </div>
      {{/each}}
      </div>
    </div>



  {{/block-slot}}
{{/ui/ui-card}}