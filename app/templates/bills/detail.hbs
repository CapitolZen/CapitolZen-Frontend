{{ui-page-property model.bill.stateId property="title"}}

{{#if (get model.bill "sponsor")}}
  {{#ui/ui-card}}
    {{#block-slot "content"}}
      {{#legislator/legislator-info legislator=(get model.bill "sponsor") as |l|}}
        <div class="media">
          <div class="media-body">
            <h5 class="mt-0 mb-1">{{l.name}}</h5>
            {{l.party}}
          </div>
        </div>
      {{/legislator/legislator-info}}
    {{/block-slot}}
  {{/ui/ui-card}}

{{/if}}

{{#ui/ui-card}}
  {{#block-slot "content"}}
   <div class="row">
     <div class="col-md-4">
       <h5>Summary</h5>
       <p>{{model.bill.title}}</p>
       <p>
         <a href="{{model.bill.remoteUrl}}" target="_blank" class="btn btn-secondary">View Bill Text</a>
       </p>
       {{bills/bill-cosponosrs model.bill}}
       {{bills/doc-list docs=model.bill.documents}}


     </div>
     <div class="col-md-4">
       {{#if model.bill.votes}}
          {{bills/vote-list votes=model.bill.votes}}
       {{/if}}
       {{bills/bill-history bill=model.bill}}
     </div>
     <div class="col-md-4">
       {{wrappers/bill-wrappers bill=model.bill wrappers=model.wrappers}}
     </div>
   </div>
  {{/block-slot}}
{{/ui/ui-card}}