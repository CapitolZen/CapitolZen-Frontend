{{bills/bill-header bill=model.bill}}
{{#ui/ui-card}}
  {{#block-slot "content"}}
   <div class="row">
     <div class="col-md-4">
       <h5>Summary</h5>
       <p>{{model.bill.title}}</p>
       <p>
         <a href="{{model.bill.remoteUrl}}" target="_blank" class="btn btn-secondary">View Source</a>
       </p>
       {{bills/bill-cosponosrs bill}}
       {{bills/doc-list docs=model.bill.documents}}


     </div>
     <div class="col-md-4">
       {{#if model.bill.votes}}
          {{bills/vote-list votes=model.bill.votes}}
       {{/if}}
       {{bills/bill-history bill=model.bill}}
     </div>
     <div class="col-md-4">
       <h5>Save</h5>
       {{bills/add-to-group bill=model.bill buttonType="primary"}}
       {{#if model.wrappers}}
         <h5>Saved For</h5>
         {{#each model.wrappers as |wrapper|}}
           <p>{{#link-to "groups.detail.bill.detail" wrapper.group.id
                         wrapper.id}} {{wrapper.group.title}} {{wrapper.position}} {{/link-to}}</p>
         {{/each}}
       {{/if}}

     </div>
   </div>
  {{/block-slot}}
{{/ui/ui-card}}